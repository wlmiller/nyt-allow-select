{
    "name": "NYT Allow Text Selection",
    "short_name": "NYT Select",
    "version": "1.0",
    "description": "Allows selecting text in New York Times online articles.",
    "content_scripts": [
        {
            "matches": ["http://*.nytimes.com/*", "https://*.nytimes.com/*"],
            "js": ["start.js"]
        }
    ],
    "web_accessible_resources": ["removelistener.js"],
    "permissions": ["http://*.nytimes.com/*", "https://*.nytimes.com/*"],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
       "128": "icon128.png" 
    },
    "manifest_version": 2
  }